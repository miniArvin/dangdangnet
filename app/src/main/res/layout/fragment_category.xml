<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mini.miniarvin.dangdangnet.demo.fragment.CategoryFragment"
    android:background="#7AFFFFFF">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/category_lv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:choiceMode="singleChoice"></ListView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/category_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp">
                <ImageView
                    android:id="@+id/category_fl_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dd_scroll_1"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true" />
                    </RelativeLayout>
                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </GridView>
                </LinearLayout>
            </FrameLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
